{
	"$schema": "https://opencode.ai/config.json",
	"theme": "system",
	"model": "anthropic/claude-sonnet-4-20250514",
	"autoshare": false,
	"autoupdate": true,
	"provider": {
		"ollama": {
			"npm": "@ai-sdk/openai-compatible",
			"name": "Ollama (local)",
			"options": {
				"baseURL": "http://localhost:11434/v1"
			},
			"models": {
				"gpt-oss:latest": {
					"name": "GPT-OSS"
				},
				"qwen3:latest": {
					"name": "Qwen3"
				},
				"gemma3n:e4b-it-q8_0": {
					"name": "Gemma3n"
				}
			}
		}
	},
	"mcp": {
		"context7": {
			"type": "local",
			"command": [
				"npx",
				"-y",
				"@upstash/context7-mcp"
			],
			"enabled": false
		},
		"serena": {
			"type": "local",
			"command": [
				"uvx",
				"--from",
				"git+https://github.com/oraios/serena",
				"serena-mcp-server",
				"--context",
				"opencode",
				"--project",
				"."
			],
			"enabled": false
		}
	},
	"tools": {
		"serena*": false,
		"context7*": false
	},
	"keybinds": {
		"leader": "ctrl+b",
		"input_newline": "<leader>enter,shift+enter",
		"messages_half_page_down": "ctrl+d",
		"messages_half_page_up": "ctrl+u",
		"messages_copy": "<leader>y"
	},
	"permission": {
		"bash": {
			"git *": "ask",
			"*": "allow"
		}
	},
	"lsp": {
		"pyright": {
			"command": ["basedpyright"]
		},
		"typescript": {
			"command": ["deno"]
		}
	}
}
