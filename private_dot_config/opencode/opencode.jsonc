{
	"$schema": "https://opencode.ai/config.json",
	"theme": "catppuccin",
	"model": "anthropic/claude-sonnet-4-5",
	"small_model": "anthropic/claude-haiku-4-5",
	"autoshare": false,
	"autoupdate": true,

	"plugin": ["opencode-anthropic-auth@0.0.13"],
	"mcp": {
		"playwright": {
			"type": "local",
			"command": ["npx", "@playwright/mcp@latest"],
			"enabled": false
		},
		"tmux": {
			"type": "local",
			"command": ["npx", "@audibleblink/tmux-mcp-server"],
			"enabled": false
		},
		"context7": {
			"type": "local",
			"command": ["npx", "-y", "@upstash/context7-mcp"],
			"enabled": false
		},
		"serena": {
			"type": "local",
			"command": [
				"uvx",
				"--from",
				"git+https://github.com/oraios/serena",
				"serena-mcp-server",
				"--context",
				"opencode",
				"--project",
				"."
			],
			"enabled": false
		}
	},

	"keybinds": {
		"leader": "ctrl+b",
		"input_newline": "<leader>enter,shift+enter",
		"messages_half_page_down": "ctrl+d",
		"messages_half_page_up": "ctrl+u",
		"messages_copy": "<leader>y"
	},

	"permission": {
		"bash": {
			"git *": "ask",
			"*": "allow"
		}
	},

	"lsp": {
		"pyright": {
			"command": ["basedpyright"]
		},
		"typescript": {
			"command": ["deno"]
		}
	},

	"provider": {
		"azure-foundry-claude": {
			"npm": "@ai-sdk/anthropic",
			"name": "Azure Anthropic",
			"options": {
				"baseURL": "{env:AZURE_FOUNDRY_HOST}/anthropic/v1",
				"apiKey": "{env:AZURE_FOUNDRY_CLAUDE_KEY}",
				"headers": {
					"anthropic-version": "2023-06-01"
				}
			},
			"models": {
				"claude-opus-4-5": {
					"name": "Opus 4.5"
				},
				"claude-sonnet-4-5": {
					"name": "Sonnet 4.5"
				},
				"claude-haiku-4-5": {
					"name": "Haiku 4.5"
				}
			}
		},

		"azure-foundry-openai": {
			"npm": "@ai-sdk/azure",
			"name": "Azure OpenAI",
			"options": {
				"resourceName": "rule10",
				"apiKey": "{env:AZURE_FOUNDRY_OPENAI_KEY}"
			},
			"models": {
				"rule10-gpt-5-2": {
					"name": "gpt-5.2"
				}
			}
		}
	},
		"ollama": {
			"npm": "@ai-sdk/openai-compatible",
			"name": "Ollama (local)",
			"options": {
				"baseURL": "http://localhost:11434/v1"
			},
			"models": {
				"gpt-oss:latest": {
					"name": "GPT-OSS"
				},
				"qwen3:latest": {
					"name": "Qwen3"
				},
				"gemma3n:e4b-it-q8_0": {
					"name": "Gemma3n"
				}
			}
		}
	}
}
