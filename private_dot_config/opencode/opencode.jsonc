{
	"$schema": "https://opencode.ai/config.json",
	"theme": "catppuccin",
	"model": "anthropic/claude-sonnet-4-5",
	"small_model": "anthropic/claude-haiku-4-5",
	"autoshare": false,
	"autoupdate": true,

	// allow for use of Claude skills in Opencode. See ./skills/
	"plugin": ["opencode-anthropic-auth@0.0.13"],
	"mcp": {
		"tmux": {
			"type": "local",
			"command": ["npx", "@audibleblink/tmux-mcp-server"],
			"enabled": false
		},
		// Disabled globally. Copy to project folders when needed
		"context7": {
			"type": "local",
			"command": ["npx", "-y", "@upstash/context7-mcp"],
			"enabled": false
		},
		// Disabled globally. Copy to project folders when needed
		"serena": {
			"type": "local",
			"command": [
				"uvx",
				"--from",
				"git+https://github.com/oraios/serena",
				"serena-mcp-server",
				"--context",
				"opencode",
				"--project",
				"."
			],
			"enabled": false
		}
	},
	// Disable these tools on default agents (non-serena agent)
	"tools": {
		"serena*": false,
		"context7*": false
	},

	"keybinds": {
		"leader": "ctrl+b",
		"input_newline": "<leader>enter,shift+enter",
		"messages_half_page_down": "ctrl+d",
		"messages_half_page_up": "ctrl+u",
		"messages_copy": "<leader>y"
	},

	"permission": {
		"bash": {
			"git *": "ask",
			"*": "allow"
		}
	},

	"lsp": {
		"pyright": {
			"command": ["basedpyright"]
		},
		"typescript": {
			"command": ["deno"]
		}
	},

	"provider": {
		// "azure-foundry-openai": {
		// 	"npm": "@ai-sdk/openai",
		// 	"name": "Azure Foundry (OpenAI)",
		// 	"options": {
		// 		"baseURL": "{env:AZURE_FOUNDRY_HOST}/models",
		// 		"useDeploymentBasedUrls": true,
		// 		"apiKey": "{env:AZURE_FOUNDRY_OPENAI_KEY}",
		// 		"resourceName": "rule10-ai"
		// 	},
		// 	"models": {
		// 		"gpt-5": {
		// 			"name": "GPT 5.2"
		// 		}
		// 	}
		// },
		"azure-foundry-claude": {
			"npm": "@ai-sdk/anthropic",
			"name": "Azure Foundry (Claude)",
			"options": {
				"baseURL": "{env:AZURE_FOUNDRY_HOST}/anthropic/v1",
				"apiKey": "{env:AZURE_FOUNDRY_CLAUDE_KEY}",
				"headers": {
					"anthropic-version": "2023-06-01"
				}
			},
			"models": {
				"claude-opus-4-5": {
					"name": "Opus 4.5"
				},
				"claude-sonnet-4-5": {
					"name": "Sonnet 4.5"
				},
				"claude-haiku-4-5": {
					"name": "Haiku 4.5"
				}
			}
		},
		"ollama": {
			"npm": "@ai-sdk/openai-compatible",
			"name": "Ollama (local)",
			"options": {
				"baseURL": "http://localhost:11434/v1"
			},
			"models": {
				"gpt-oss:latest": {
					"name": "GPT-OSS"
				},
				"qwen3:latest": {
					"name": "Qwen3"
				},
				"gemma3n:e4b-it-q8_0": {
					"name": "Gemma3n"
				}
			}
		}
	}
}
