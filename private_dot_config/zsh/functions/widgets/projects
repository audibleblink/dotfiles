# interactively search ~/Code/, prefering tmux popup when possible

emulate -L zsh
local umask=117
local in=$(mktemp -t projects.XXX -p $XDG_RUNTIME_DIR)
local out=$(mktemp -t projects.XXX -p $XDG_RUNTIME_DIR)
trap "rm -- ${in} ${out} 2>/dev/null" EXIT
 
if [[ -v TMUX ]]; then
  tmux popup -w 66% -h 66% -b none -E "tv projects >$out" 
  local dirb=$(cat $out)
else
  local dirb=$(tv projects)
fi

if ! [[ -z $dirb ]]; then
  BUFFER="cd ${dirb}"
  zle accept-line
fi

# vim: ft=zsh

