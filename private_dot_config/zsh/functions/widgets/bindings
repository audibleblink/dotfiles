# setup bindings

emulate -L zsh

bindkey '^[[A' history-substring-search-up
bindkey '^[[B' history-substring-search-down

# Ctrl+Z to toggle last job (likely nvim)
zle -N fancy-ctrl-z
bindkey '^Z' fancy-ctrl-z

# Prepend sudo to the current command
zle -N prepend-sudo
bindkey -M vicmd ! prepend-sudo

# fzf-powered jumplist
zle -N cdjump
bindkey '^F' cdjump

# navigate up the dir stack
zle -N popdir
bindkey '^O' popdir

# navigate hash -d bookmarks and cd
zle -N bookmarks
bindkey '^B' bookmarks

# cd to a ~/code project
zle -N projects
bindkey '^G' projects

# Smart fzf picker based on context
zle -N smart-fzf
bindkey '^T' smart-fzf

# vim: ft=zsh
