ZSH="${XDG_STATE_HOME}/zsh"
ZSH_CUSTOM="${XDG_DATA_HOME}/zsh"

# Navigation [[[
setopt auto_pushd
setopt pushd_ignore_dups
setopt pushdminus
setopt AUTO_CD
# ]]]

# History [[[
setopt append_history
setopt extended_history
setopt hist_expire_dups_first
setopt hist_ignore_dups # ignore duplication command history list
setopt hist_ignore_space
setopt hist_verify
setopt inc_append_history
setopt share_history # share command history data
if [ -z "$HISTFILE" ]; then
  HISTFILE="${ZSH}/history"
fi
HISTSIZE=10000
SAVEHIST=10000
# ]]]

plugins=(
  vi-mode
  zsh-autopair

  {{- if (.personal) }}
  gpg
  todo
  kube-ps1
  atuin
  fuck
  # pentest
  {{- end }}
  zsh-syntax-highlighting
)

theme=pure
source $ZSH_CUSTOM/themes/${theme}.zsh  # Sets theme
autoload -Uz $ZSH_CUSTOM/functions/**/* # Sources custom functions
source "${ZSH_CUSTOM}/aliases.zsh"      # Sources custom  aliases
source "${ZSH_CUSTOM}/key-bindings.zsh" # Sources custom  aliases
source $ZSH_CUSTOM/sourcer.zsh          # Sets up fpaths and plugins

[ -f ~/.zshrc_local ] && source ~/.zshrc_local

